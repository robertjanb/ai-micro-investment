# Database (SQLite)
# Local dev from project root:
DATABASE_URL="file:./dev.db"
# Docker / Unraid (persistent volume mounted to /data):
# DATABASE_URL="file:/data/app.db"

# OpenRouter API (https://openrouter.ai/keys)
OPENROUTER_API_KEY="sk-or-v1-..."

# AI Model (any model available on OpenRouter)
AI_MODEL="anthropic/claude-sonnet-4-20250514"

# NextAuth
# Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"
# For Docker/self-hosted: use your actual domain (e.g., https://invest.tiahue.com)
NEXTAUTH_URL="http://localhost:3000"

# Data source toggle: 'mock' or 'real' (preferred)
DATA_SOURCE="real"
# Backward-compatible toggle: true/false (used only if DATA_SOURCE is not set)
# USE_REAL_DATA="true"

# App version label shown in the header (optional, defaults to package.json version)
APP_VERSION="0.1.0"

# Performance proof analytics
PERFORMANCE_PROOF_ENABLED="true"

# Finnhub API (https://finnhub.io/register - free tier: 60 calls/min)
# Required for real data source: provides news, sentiment, and earnings calendar
FINNHUB_API_KEY="your_finnhub_api_key_here"
