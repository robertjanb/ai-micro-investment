generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String           @id @default(cuid())
  email           String           @unique
  passwordHash    String
  resetToken      String?
  resetTokenExp   DateTime?
  tokenVersion    Int              @default(0)
  conversations   Conversation[]
  watchlist       WatchlistItem[]
  holdings        Holding[]
  recommendations Recommendation[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model Conversation {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String       // 'user' | 'assistant'
  content        String       @db.Text
  createdAt      DateTime     @default(now())
}

model Idea {
  id              String          @id @default(cuid())
  ticker          String
  companyName     String
  oneLiner        String
  thesis          String          @db.Text
  bearCase        String          @db.Text
  confidenceScore Int
  signals         Json
  riskLevel       String          // 'safe' | 'interesting' | 'spicy'
  initialPrice    Float
  currentPrice    Float
  currency        String          @default("EUR")
  generatedDate   DateTime        @default(now()) @db.Date
  priceHistory    PriceHistory[]
  watchlistItems  WatchlistItem[]
  holdings        Holding[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@index([generatedDate])
  @@index([createdAt])
}

model DailyIdeaBatch {
  id            String   @id @default(cuid())
  generatedDate DateTime @unique @db.Date
  createdAt     DateTime @default(now())
}

model WatchlistItem {
  id               String   @id @default(cuid())
  visitorSessionId String?
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  ideaId           String
  idea             Idea     @relation(fields: [ideaId], references: [id], onDelete: Cascade)
  addedPrice       Float
  addedAt          DateTime @default(now())

  @@unique([userId, ideaId])
  @@index([userId])
}

model PriceHistory {
  id        String   @id @default(cuid())
  ideaId    String
  idea      Idea     @relation(fields: [ideaId], references: [id], onDelete: Cascade)
  price     Float
  timestamp DateTime @default(now())

  @@index([ideaId])
  @@index([timestamp])
}

model Holding {
  id            String           @id @default(cuid())
  userId        String
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  ideaId        String?
  idea          Idea?            @relation(fields: [ideaId], references: [id], onDelete: SetNull)
  ticker        String
  companyName   String?
  quantity      Float
  purchasePrice Float
  purchaseDate  DateTime         @db.Date
  currentPrice  Float
  notes         String?          @db.Text
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  recommendations Recommendation[]

  @@unique([userId, ticker, purchaseDate])
  @@index([userId])
}

model Recommendation {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  holdingId   String?
  holding     Holding? @relation(fields: [holdingId], references: [id], onDelete: Cascade)
  ticker      String
  action      String   // 'buy' | 'sell' | 'hold'
  reasoning   String   @db.Text
  confidence  Int
  generatedAt DateTime @default(now()) @db.Date
  createdAt   DateTime @default(now())

  @@unique([userId, ticker, generatedAt])
  @@index([userId, generatedAt])
}

model CronJobStatus {
  id            String   @id @default(cuid())
  name          String   @unique
  lastRunAt     DateTime?
  lastSuccessAt DateTime?
  lastError     String?  @db.Text
  lastSummary   Json?
  updatedAt     DateTime @updatedAt
}

model IdeaConfig {
  id                String   @id @default("global")
  markets           Json     // e.g. ["US", "DE", "FR", "NL", "GB"]
  minMarketCapEur   Float    @default(500000000)
  maxMarketCapEur   Float?   // null = no upper limit
  minPeRatio        Float?
  maxPeRatio        Float?
  minDividendYield  Float?   // e.g. 0.02 for 2%
  sectors           Json     // [] = all sectors, otherwise allowlist
  excludedSectors   Json     // sectors to exclude
  riskLevels        Json     // e.g. ["safe", "interesting"] â€” filter AI output
  minPriceEur       Float    @default(5)
  maxPriceEur       Float?   // null = no upper limit
  updatedAt         DateTime @updatedAt
}
